<% provide(:title, "新規登録")%>
<div class = "container bg-light my-5">
  <h2 class= "border-bottom border-primary pt-4">新規登録</h2>
  <%= form_for(resource, as: resource_name,  url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="field form-group">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control col-lg-5" %>
    </div>
    <div class="field form-group">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-lg-5" %>
    </div>
    <div class="field form-group">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-lg-5" %>
    </div>
    <div class="field form-group">
      <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-lg-5" %>
    </div>
    <div class="field form-group">
      <%= f.label :birth_date, "お子様の誕生日" %><br />
      <%= f.date_select :birth_date, use_month_numbers: true, start_year: 2010, end_year: (Time.now.year), default: Date.new(2010, 1, 1) %>
    </div>
    <div class="field form-group">
      <%= f.label :image, "プロフィール画像" %><br/>
      <%= f.file_field :image %>
    </div>
    <div class = "actions mt-4">
      <%= f.submit "新規登録", class: "btn btn-info login"%>
    </div>
  <% end %>
  <div class= "mt-2 pb-4">
    <%= render "users/shared/links" %>
  </div>
  <%= link_to 'javascript:history.back()' do %>
    <i class="mt-3 fas fa-arrow-circle-left fa-2x"></i>
  <% end %>
</div>
