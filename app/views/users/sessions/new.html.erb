<% provide(:title, "ログイン")%>
<div class = "container bg-light my-5">
  <h2 class= "border-bottom border-primary pt-4">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-lg-5" %>
    </div>

    <div class="field form-group">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-lg-5"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "	ログイン状態を保持する" %>
      </div>
    <% end %>

    <div class="actions mt-4">
      <%= f.submit "ログイン", class: "btn btn-info login" %>
    </div>
  <% end %>
  <div class= "mt-2 pb-4">
    <%= render "users/shared/links" %>
  </div>
  <%= link_to 'javascript:history.back()' do %>
    <i class="mt-3 fas fa-arrow-circle-left fa-2x"></i>
  <% end %>
</div>
