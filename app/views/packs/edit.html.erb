<% provide(:title, "献立編集")%>
<div class = "container bg-light my-5">
  <h2 class= "border-bottom border-primary pt-4">献立編集</h2>
  <%= form_with model: @pack, method: :put, local: true do |f| %>
    <div class="field form-group">
      <%= f.label :name, "献立名" %><br />
      <%= f.text_field :name, value: @pack.name, autofocus: true, autocomplete: "name", class: "form-control col-lg-5" %>
    </div>
    <div class="actions mt-4">
      <%= f.submit "更新", class: "btn btn-info login"%>
    </div>
  <% end %>
  <div>
    <p><%= button_to "献立を削除する", pack_path(@pack), data: { confirm: "献立を削除してよろしいですか?" }, method: :delete, class: "btn btn-danger" %></p>
  </div>
  <%= link_to 'javascript:history.back()' do %>
    <i class="mt-3 fas fa-arrow-circle-left fa-2x"></i>
  <% end %>
</div>
