<% provide(:title, "献立作成フォーム")%>
<div class = "container bg-light my-5">
  <h1 class= "border-bottom border-primary pt-4">献立作成フォーム</h1>
  <%= form_with url: new_pack_path, method: :get, local: true do |f| %>
    <div class="field form-group  mt-4">
      <div>
        <%= f.label :count, "作成食数" %>
        <%= f.select :count, [*1..21], class: "form-control col-sm-5" %>
      </div>
      <div>
        <%= f.label :best_age, "お子様の月齢" %>
        <%= f.select :best_age, ["5-6ヶ月", "7-8ヶ月", "9-12ヶ月"], {selected: @best_age}, class: "form-control col-sm-3 " %>
      </div>
    </div>
    <div class = "mt-4">
      <h6> アレルギー食材</h6>
    </div>
    <div class = "form-check px-1">
      <%= f.check_box :ng_food, { multiple: true}, "たまご", class: "form-check-input"%>
      <%= label :ng_food, "小麦" %>
      
      <%= f.check_box :ng_food, { multiple: true}, "牛乳",  class: "form-check-input"%>
      <%= label :ng_food, "卵" %>
      
      <%= f.check_box :ng_food, { multiple: true}, "パン", class: "form-check-input"%>
      <%= label :ng_food, "牛乳" %>
      
      <%= f.check_box :ng_food, { multiple: true}, "いか", class: "form-check-input"%>
      <%= label :ng_food, "えび" %>

      <%= f.check_box :ng_food, { multiple: true}, "トマト", class: "form-check-input"%>
      <%= label :ng_food, "かに" %>

      <%= f.check_box :ng_food, { multiple: true}, "トマト", class: "form-check-input "%>
      <%= label :ng_food, "そば" %>

      <%= f.check_box :ng_food, { multiple: true}, "トマト", class: "form-check-input "%>
      <%= label :ng_food, "落花生" %>

    </div>
    <div class="actions mt-4">
        <%= f.submit "作成", class: "btn btn-info" %>
    </div> 
  <% end %>
  <div class = "mt-2">
  <%= link_to "メニュー一覧", menus_path, class: "mt-1" %>
  </div>
  <div>
  <%= link_to 'javascript:history.back()' do %>
    <i class="mt-3 fas fa-arrow-circle-left fa-2x"></i>
  <% end %>
  </div>
</div>